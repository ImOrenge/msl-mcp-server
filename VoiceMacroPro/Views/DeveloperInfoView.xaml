                        <TextBlock Text="â€¢ Preset management system" FontSize="12" Margin="0,2" Foreground="#2D3748"/>
                        <TextBlock Text="â€¢ Detailed log monitoring" FontSize="12" Margin="0,2" Foreground="#2D3748"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Developer and Contact Info Area -->
            <Border Grid.Column="2" Background="White" CornerRadius="10" 
                   Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Developer Information" FontSize="18" 
                              FontWeight="Bold" Foreground="#2D3748" Margin="0,0,0,20"/>
                    
                    <!-- Developer Info -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ’»" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,10"/>
