                                  HorizontalAlignment="Center" Foreground="#2D3748"/>
                        <TextBlock Text="Game Automation Solution Experts" FontSize="12" 
                                  HorizontalAlignment="Center" Foreground="#718096"/>
                    </StackPanel>
                    
                    <!-- Contact Info -->
                    <TextBlock Text="Contact Information" FontWeight="Bold" Margin="0,10,0,10"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Email:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="support@voicemacro.pro" 
                                  HorizontalAlignment="Right" Margin="0,5" Foreground="#4299E1"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Website:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="www.voicemacro.pro" 
                                  HorizontalAlignment="Right" Margin="0,5" Foreground="#4299E1"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="GitHub:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="github.com/voicemacropro" 
                                  HorizontalAlignment="Right" Margin="0,5" Foreground="#4299E1"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Discord:" 
                                  FontWeight="Bold" Margin="0,5"/>
