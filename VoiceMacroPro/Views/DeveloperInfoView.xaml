        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#EDF2F7" Padding="15,10" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="VoiceMacro Pro - Game AI Voice Macro Solution" 
                          FontSize="12" Foreground="#718096" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Â© 2025 VoiceMacro Pro Team" 
