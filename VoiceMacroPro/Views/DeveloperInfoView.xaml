                            <TextBlock Text="MIT License" FontWeight="Bold" Foreground="#38A169"/>
                            <TextBlock Text="This is an open source project." FontSize="12" Foreground="#38A169" Margin="0,5,0,0"/>
                            <TextBlock Text="Feel free to use and modify." FontSize="12" Foreground="#38A169"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Acknowledgments -->
                    <TextBlock Text="Acknowledgments" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBlock Text="This project uses the following open source libraries:" 
