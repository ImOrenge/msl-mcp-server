                            <TextBlock Text="Game AI Voice Macro" FontSize="14" Foreground="#718096"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Version Info -->
                    <Grid Margin="0,10,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="1.0.0" 
                                  HorizontalAlignment="Right" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Build:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="2025.01.18.001" 
                                  HorizontalAlignment="Right" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Platform:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text=".NET 8.0 / WPF" 
                                  HorizontalAlignment="Right" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="OS:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Windows 10/11" 
                                  HorizontalAlignment="Right" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Release Date:" 
                                  FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="January 18, 2025" 
                                  HorizontalAlignment="Right" Margin="0,5"/>
                    </Grid>
                    
                    <!-- Feature List -->
                    <TextBlock Text="Key Features" FontWeight="Bold" Margin="0,10,0,10"/>
                    <StackPanel>
                        <TextBlock Text="â€¢ Whisper AI-based voice recognition" FontSize="12" Margin="0,2" Foreground="#2D3748"/>
