                                          FontSize="16" 
                                          Margin="15,15,15,10"/>
                                
                                <!-- 미리보기 내용 -->
                                <ScrollViewer Grid.Row="1" Margin="15,0,15,0" VerticalScrollBarVisibility="Auto">
                                    <StackPanel Name="PresetPreviewPanel">
                                        <!-- 선택된 프리셋이 없을 때 -->
                                        <TextBlock Name="NoPresetSelectedText"
                                                  Text="프리셋을 선택하세요" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  FontSize="14" 
                                                  Foreground="#7F8C8D"
                                                  Margin="0,50,0,0"/>
                                        
                                        <!-- 선택된 프리셋 정보 -->
                                        <StackPanel Name="PresetInfoPanel" Visibility="Collapsed">
                                            <!-- 기본 정보 -->
                                            <Border Background="#F8F9FA" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                                                <StackPanel>
                                                    <TextBlock Name="PresetNameText" 
                                                              FontWeight="Bold" 
                                                              FontSize="16" 
                                                              Margin="0,0,0,5"/>
                                                    <TextBlock Name="PresetDescriptionText" 
                                                              TextWrapping="Wrap" 
                                                              Margin="0,0,0,5"/>
                                                    <TextBlock Name="PresetCreatedText" 
                                                              FontSize="12" 
                                                              Foreground="#7F8C8D"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <!-- 포함된 매크로 목록 -->
                                            <TextBlock Text="📦 포함된 매크로" FontWeight="Bold" Margin="0,0,0,10"/>
                                            <ListBox Name="PresetMacroListBox" 
                                                    Height="200"
                                                    BorderThickness="1"
                                                    BorderBrush="#DEE2E6"
                                                    Background="#FAFAFA">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="5">
                                                            <TextBlock Text="🎮" Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,10,0"/>
                                                            <TextBlock Text="{Binding VoiceCommand}" 
                                                                      Foreground="#6C757D" 
                                                                      FontStyle="Italic"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                                
                                <!-- 미리보기 하단 버튼 -->
                                <Border Grid.Row="2" Background="#F8F9FA" Padding="15" CornerRadius="0,0,5,5">
                                    <StackPanel Name="PresetPreviewActions" Visibility="Collapsed">
                                        <Button Name="QuickApplyButton"
                                               Content="⚡ 빠른 적용" 
                                               Padding="10,8" 
                                               Background="#27AE60" 
                                               Foreground="White" 
                                               BorderThickness="0"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"
