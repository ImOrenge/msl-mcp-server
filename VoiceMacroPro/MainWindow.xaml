                            <StackPanel Grid.Column="1">
                                <TextBlock Text="⭐ 즐겨찾기" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Name="FavoritePresetsText" Text="0개" FontSize="20" Foreground="#F39C12"/>
