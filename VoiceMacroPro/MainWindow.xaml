<Window x:Class="VoiceMacroPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceMacro Pro - 게임 AI 음성 매크로" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <!-- 메인 그리드 레이아웃 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 상단 제목 영역 -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🎮 VoiceMacro Pro" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                <TextBlock Text="매크로 관리 시스템" 
                          FontSize="16" 
                          Foreground="#BDC3C7" 
                          VerticalAlignment="Center" 
                          Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 메인 콘텐츠 영역 -->
        <TabControl Grid.Row="1" Background="#ECF0F1" Margin="10">
            
            <!-- 매크로 관리 탭 -->
            <TabItem Header="📋 매크로 관리" FontSize="14" Padding="15,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 검색 및 필터 영역 -->
                    <Border Grid.Row="0" Background="White" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 검색 박스 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="🔍 검색:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Name="SearchTextBox" 
                                        Width="300" 
                                        Height="30" 
                                        VerticalContentAlignment="Center"
                                        Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                        FontSize="14"/>
                                <Button Name="SearchButton" 
                                       Content="검색" 
                                       Margin="10,0,0,0" 
                                       Padding="15,5" 
                                       Background="#3498DB" 
                                       Foreground="White" 
                                       BorderThickness="0"
                                       Click="SearchButton_Click"/>
                            </StackPanel>
                            
                            <!-- 정렬 옵션 -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                                <TextBlock Text="정렬:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Name="SortComboBox" 
                                         Width="120" 
                                         Height="30"
                                         SelectedIndex="0"
                                         SelectionChanged="SortComboBox_SelectionChanged">
                                    <ComboBoxItem Content="이름순" Tag="name"/>
                                    <ComboBoxItem Content="생성일순" Tag="created_at"/>
                                    <ComboBoxItem Content="사용빈도순" Tag="usage_count"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- 새로고침 버튼 -->
                            <Button Grid.Column="2" 
                                   Name="RefreshButton"
                                   Content="🔄 새로고침" 
                                   Margin="20,0,0,0" 
                                   Padding="15,5" 
                                   Background="#27AE60" 
                                   Foreground="White" 
                                   BorderThickness="0"
                                   Click="RefreshButton_Click"/>
                        </Grid>
                    </Border>
                    
                    <!-- 버튼 그룹 -->
                    <Border Grid.Row="1" Background="White" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Name="AddMacroButton" 
                                   Content="➕ 새 매크로 추가" 
                                   Margin="0,0,10,0" 
                                   Padding="15,8" 
                                   Background="#2ECC71" 
                                   Foreground="White" 
                                   BorderThickness="0"
                                   FontWeight="Bold"
                                   Click="AddMacroButton_Click"/>
                            <Button Name="EditMacroButton" 
                                   Content="✏️ 수정" 
                                   Margin="0,0,10,0" 
                                   Padding="15,8" 
                                   Background="#F39C12" 
                                   Foreground="White" 
                                   BorderThickness="0"
                                   IsEnabled="False"
                                   Click="EditMacroButton_Click"/>
                            <Button Name="CopyMacroButton" 
                                   Content="📋 복사" 
                                   Margin="0,0,10,0" 
                                   Padding="15,8" 
                                   Background="#3498DB" 
                                   Foreground="White" 
                                   BorderThickness="0"
                                   IsEnabled="False"
                                   Click="CopyMacroButton_Click"/>
                            <Button Name="DeleteMacroButton" 
                                   Content="🗑️ 삭제" 
                                   Margin="0,0,10,0" 
                                   Padding="15,8" 
                                   Background="#E74C3C" 
                                   Foreground="White" 
                                   BorderThickness="0"
                                   IsEnabled="False"
                                   Click="DeleteMacroButton_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 매크로 목록 DataGrid -->
                    <Border Grid.Row="2" Background="White" CornerRadius="5">
                        <DataGrid Name="MacroDataGrid" 
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 CanUserResizeRows="False"
                                 SelectionMode="Single"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column"
                                 AlternatingRowBackground="#F8F9FA"
                                 RowBackground="White"
                                 BorderThickness="0"
                                 FontSize="12"
                                 SelectionChanged="MacroDataGrid_SelectionChanged">
                            
                            <!-- 컬럼 정의 -->
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                   Binding="{Binding Id}" 
                                                   Width="60" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="매크로 이름" 
                                                   Binding="{Binding Name}" 
                                                   Width="200" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="음성 명령어" 
                                                   Binding="{Binding VoiceCommand}" 
                                                   Width="200" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="동작 설명" 
                                                   Binding="{Binding KeySequence}" 
                                                   Width="250" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="타입" 
                                                   Binding="{Binding ActionType}" 
                                                   Width="100" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="생성일" 
                                                   Binding="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd}}" 
                                                   Width="100" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="사용 횟수" 
                                                   Binding="{Binding UsageCount}" 
                                                   Width="100" 
                                                   IsReadOnly="True"/>
                            </DataGrid.Columns>
                            
                            <!-- 행 스타일 -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Height" Value="35"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E8F6F3"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#3498DB"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            
                            <!-- 헤더 스타일 -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#34495E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="#2C3E50"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- PRD 3.2.3 음성 인식 시스템 -->
            <TabItem Header="🎤 음성 인식" FontSize="14" Padding="15,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 음성 입력 상태 표시 -->
                    <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,15" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 마이크 레벨 게이지 -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="🎤 마이크 레벨" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <ProgressBar Name="MicLevelProgressBar" 
                                           Height="25" 
                                           Background="#E9ECEF"
                                           Foreground="#28A745"
                                           Minimum="0" 
                                           Maximum="1"
                                           Value="0"/>
                                <TextBlock Name="MicLevelTextBlock" 
                                          Text="0%" 
                                          HorizontalAlignment="Center" 
                                          FontSize="12" 
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- 녹음 상태 표시 -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="20,0">
                                <TextBlock Text="📡 녹음 상태" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <Ellipse Name="RecordingStatusIndicator" 
                                        Width="50" 
                                        Height="50" 
                                        Fill="#DC3545"
                                        HorizontalAlignment="Center"/>
                                <TextBlock Name="RecordingStatusText" 
                                          Text="중지" 
                                          HorizontalAlignment="Center" 
                                          FontSize="12" 
                                          FontWeight="Bold"
                                          Margin="0,5,0,0"/>
                                
                                <!-- 녹음 제어 버튼 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Button Name="StartRecordingButton"
                                           Content="🎤 녹음 시작" 
                                           Padding="15,8" 
                                           Background="#28A745" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Margin="0,0,10,0"
                                           Click="StartRecordingButton_Click"/>
                                    <Button Name="StopRecordingButton"
                                           Content="⏹️ 녹음 중지" 
                                           Padding="15,8" 
                                           Background="#DC3545" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           IsEnabled="False"
                                           Click="StopRecordingButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- 인식된 텍스트 표시창 -->
                            <StackPanel Grid.Column="2" Margin="20,0,0,0">
                                <TextBlock Text="💬 인식된 텍스트" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <Border Background="#F8F9FA" 
                                       BorderBrush="#DEE2E6" 
                                       BorderThickness="1" 
                                       CornerRadius="5" 
                                       Height="80">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBlock Name="RecognizedTextBlock" 
                                                  Text="음성 인식을 시작하세요..." 
                                                  TextWrapping="Wrap" 
                                                  Margin="10"
                                                  FontSize="14"
                                                  Foreground="#6C757D"/>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 설정 그룹 -->
                    <Border Grid.Row="1" Background="White" Padding="20" Margin="0,0,0,15" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 마이크 선택 -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="🎙️ 마이크 선택" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <ComboBox Name="MicrophoneComboBox" 
                                         Height="35"
                                         FontSize="12"
                                         SelectionChanged="MicrophoneComboBox_SelectionChanged"/>
                            </StackPanel>
                            
                            <!-- 감도 조절 -->
                            <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                <TextBlock Text="📊 감도 조절" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Name="SensitivitySlider" 
                                           Grid.Column="0"
                                           Height="35"
                                           Minimum="0.1" 
                                           Maximum="2.0" 
                                           Value="1.0"
                                           TickFrequency="0.1"
                                           ValueChanged="SensitivitySlider_ValueChanged"/>
                                    <TextBlock Grid.Column="1" 
                                              Name="SensitivityValueText"
                                              Text="1.0x" 
                                              VerticalAlignment="Center" 
                                              Margin="10,0,0,0"
                                              FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 언어 선택 -->
                            <StackPanel Grid.Column="2" Margin="0,0,20,0">
                                <TextBlock Text="🌐 언어 선택" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <ComboBox Name="LanguageComboBox" 
                                         Height="35"
                                         FontSize="12"
                                         SelectedIndex="0"
                                         SelectionChanged="LanguageComboBox_SelectionChanged">
                                    <ComboBoxItem Content="한국어 (ko)" Tag="ko"/>
                                    <ComboBoxItem Content="English (en)" Tag="en"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- 마이크 테스트 버튼 -->
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="🔧 테스트" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="TestMicrophoneButton"
                                           Content="🧪 마이크 테스트" 
                                           Padding="15,8" 
                                           Background="#17A2B8" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Margin="0,0,5,0"
                                           Click="TestMicrophoneButton_Click"/>
                                    <Button Name="RefreshMicrophoneButton"
                                           Content="🔄 새로고침" 
                                           Padding="10,8" 
                                           Background="#28A745" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="RefreshMicrophoneButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 매칭 결과 표시 -->
                    <Border Grid.Row="2" Background="White" Padding="15" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 매칭 결과 헤더 -->
                            <TextBlock Grid.Row="0" 
                                      Text="🎯 매칭된 매크로 목록" 
                                      FontWeight="Bold" 
                                      FontSize="16" 
                                      Margin="0,0,0,15"/>
                            
                            <!-- 매칭 결과 DataGrid -->
                            <DataGrid Grid.Row="1"
                                     Name="MatchedMacrosDataGrid" 
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     CanUserResizeRows="False"
                                     SelectionMode="Single"
                                     GridLinesVisibility="Horizontal"
                                     HeadersVisibility="Column"
                                     AlternatingRowBackground="#F8F9FA"
                                     RowBackground="White"
                                     BorderThickness="1"
                                     BorderBrush="#DEE2E6"
                                     FontSize="12"
                                     MouseDoubleClick="MatchedMacrosDataGrid_MouseDoubleClick">
                                
                                <!-- 매칭 결과 컬럼 정의 -->
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="순위" 
                                                       Binding="{Binding Rank}" 
                                                       Width="60" 
                                                       IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    
                                    <DataGridTextColumn Header="매크로 이름" 
                                                       Binding="{Binding MacroName}" 
                                                       Width="200" 
                                                       IsReadOnly="True"/>
                                    
                                    <DataGridTextColumn Header="음성 명령어" 
                                                       Binding="{Binding VoiceCommand}" 
                                                       Width="200" 
                                                       IsReadOnly="True"/>
                                    
                                    <DataGridTextColumn Header="확신도" 
                                                       Binding="{Binding ConfidenceText}" 
                                                       Width="100" 
                                                       IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="{Binding ConfidenceColor}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    
                                    <DataGridTextColumn Header="동작 설명" 
                                                       Binding="{Binding ActionDescription}" 
                                                       Width="*" 
                                                       IsReadOnly="True"/>
                                    
                                    <DataGridTemplateColumn Header="실행" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="▶️" 
                                                       Padding="5" 
                                                       Background="#28A745" 
                                                       Foreground="White" 
                                                       BorderThickness="0"
                                                       Click="ExecuteMacroButton_Click"
                                                       Tag="{Binding MacroId}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                
                                <!-- 행 스타일 -->
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Height" Value="40"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F5E8"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#28A745"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                                
                                <!-- 헤더 스타일 -->
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#198754"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                        <Setter Property="BorderBrush" Value="#146C43"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- PRD 3.5 로그 및 모니터링 시스템 -->
            <TabItem Header="📊 로그 및 모니터링" FontSize="14" Padding="15,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 로그 제어 패널 -->
                    <Border Grid.Row="0" Background="White" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 로그 레벨 선택 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="로그 레벨:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Name="LogLevelComboBox" 
                                         Width="100" 
                                         Height="30"
                                         SelectedIndex="1"
                                         SelectionChanged="LogLevelComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Debug" Tag="Debug"/>
                                    <ComboBoxItem Content="Info" Tag="Info"/>
                                    <ComboBoxItem Content="Warning" Tag="Warning"/>
                                    <ComboBoxItem Content="Error" Tag="Error"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- 필터 검색박스 -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="필터:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Name="LogFilterTextBox" 
                                        Width="200" 
                                        Height="30" 
                                        VerticalContentAlignment="Center"
                                        FontSize="14"
                                        TextChanged="LogFilterTextBox_TextChanged"/>
                            </StackPanel>
                            
                            <!-- 자동 스크롤 체크박스 -->
                            <CheckBox Grid.Column="2" 
                                     Name="AutoScrollCheckBox"
                                     Content="자동 스크롤" 
                                     VerticalAlignment="Center"
                                     IsChecked="True"
                                     Checked="AutoScrollCheckBox_Checked"
                                     Unchecked="AutoScrollCheckBox_Unchecked"/>
                            
                            <!-- 로그 관리 버튼들 -->
                            <Button Grid.Column="3" 
                                   Name="ExportLogButton"
                                   Content="📁 로그 저장" 
                                   Margin="10,0,0,0" 
                                   Padding="15,5" 
                                   Background="#17A2B8" 
                                   Foreground="White" 
                                   BorderThickness="0"
                                   Click="ExportLogButton_Click"/>
                            
                            <Button Grid.Column="4" 
                                   Name="ClearLogButton"
                                   Content="🗑️ 로그 지우기" 
                                   Margin="10,0,0,0" 
                                   Padding="15,5" 
                                   Background="#DC3545" 
                                   Foreground="White" 
                                   BorderThickness="0"
                                   Click="ClearLogButton_Click"/>
                            
                            <!-- 로그 통계 -->
                            <TextBlock Grid.Column="5" 
                                      Name="LogCountTextBlock"
                                      Text="총 0개 로그" 
                                      VerticalAlignment="Center" 
                                      Margin="20,0,0,0"
                                      FontWeight="Bold"/>
                        </Grid>
                    </Border>
                    
                    <!-- 실시간 로그 출력창 -->
                    <Border Grid.Row="1" Background="White" CornerRadius="5">
                        <DataGrid Name="LogDataGrid" 
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 CanUserResizeRows="False"
                                 SelectionMode="Single"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column"
                                 AlternatingRowBackground="#F8F9FA"
                                 RowBackground="White"
                                 BorderThickness="0"
                                 FontSize="11"
                                 FontFamily="Consolas, Monaco, 'Courier New', monospace">
                            
                            <!-- 로그 컬럼 정의 -->
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="시간" 
                                                   Binding="{Binding TimeText}" 
                                                   Width="100" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="레벨" 
                                                   Binding="{Binding LevelText}" 
                                                   Width="80" 
                                                   IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding LevelColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="메시지" 
                                                   Binding="{Binding Message}" 
                                                   Width="*" 
                                                   IsReadOnly="True"/>
                                <DataGridTextColumn Header="매크로 ID" 
                                                   Binding="{Binding MacroId}" 
                                                   Width="80" 
                                                   IsReadOnly="True"/>
                            </DataGrid.Columns>
                            
                            <!-- 로그 행 스타일 -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Height" Value="25"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2196F3"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            
                            <!-- 로그 헤더 스타일 -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#37474F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="#263238"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </Border>
                    
                    <!-- 하단 통계 패널 -->
                    <Border Grid.Row="2" Background="White" Padding="15" Margin="0,10,0,0" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 성능 통계 표시 (향후 구현) -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="매크로 실행 성공률" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Name="MacroSuccessRateTextBlock" Text="100%" FontSize="24" Foreground="#4CAF50"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="음성 인식 정확도" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Name="VoiceAccuracyTextBlock" Text="95%" FontSize="24" Foreground="#2196F3"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="시스템 상태" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Name="SystemStatusTextBlock" Text="정상" FontSize="24" Foreground="#4CAF50"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- PRD 3.3 매크로 동작 메커니즘 설정 -->
            <TabItem Header="⚙️ 매크로 설정" FontSize="14" Padding="15,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 매크로 기본 정보 입력 -->
                    <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,15" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 매크로 이름 -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="📝 매크로 이름" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Name="MacroNameTextBox" 
                                        Height="35"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        Text="{Binding MacroName, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            
                            <!-- 음성 명령어 -->
                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <TextBlock Text="🎤 음성 명령어" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Name="VoiceCommandTextBox" 
                                        Height="35"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        Text="{Binding VoiceCommand, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            
                            <!-- 매크로 설명 -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="📄 매크로 설명" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Name="MacroDescriptionTextBox" 
                                        Height="35"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        Text="{Binding MacroDescription, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 매크로 타입 선택 -->
                    <Border Grid.Row="1" Background="White" Padding="20" Margin="0,0,0,15" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="🎮 매크로 타입 선택" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton Name="ComboRadioButton" 
                                           Content="⚡ 콤보" 
                                           Margin="0,0,30,0" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           IsChecked="True"
                                           Checked="MacroTypeRadioButton_Checked"
                                           Tag="Combo"/>
                                <RadioButton Name="RapidRadioButton" 
                                           Content="🔥 연사" 
                                           Margin="0,0,30,0" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Checked="MacroTypeRadioButton_Checked"
                                           Tag="Rapid"/>
                                <RadioButton Name="HoldRadioButton" 
                                           Content="🔒 홀드" 
                                           Margin="0,0,30,0" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Checked="MacroTypeRadioButton_Checked"
                                           Tag="Hold"/>
                                <RadioButton Name="ToggleRadioButton" 
                                           Content="🔄 토글" 
                                           Margin="0,0,30,0" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Checked="MacroTypeRadioButton_Checked"
                                           Tag="Toggle"/>
                                <RadioButton Name="RepeatRadioButton" 
                                           Content="🔁 반복" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Checked="MacroTypeRadioButton_Checked"
                                           Tag="Repeat"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 타입별 설정 패널 -->
                    <Border Grid.Row="2" Background="White" Padding="20" Margin="0,0,0,15" CornerRadius="8">
                        <Grid>
                            <!-- 콤보 설정 패널 -->
                            <StackPanel Name="ComboSettingsPanel" Visibility="Visible">
                                <TextBlock Text="⚡ 콤보 설정 - 키 순서와 딜레이" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 기본 딜레이 설정 -->
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="⏱️ 기본 딜레이:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <Slider Grid.Column="1" 
                                               Name="ComboDefaultDelaySlider"
                                               Minimum="1" 
                                               Maximum="1000" 
                                               Value="100"
                                               TickFrequency="50"
                                               ValueChanged="ComboDefaultDelaySlider_ValueChanged"/>
                                        <TextBlock Grid.Column="2" 
                                                  Name="ComboDefaultDelayText"
                                                  Text="100ms" 
                                                  VerticalAlignment="Center" 
                                                  Margin="10,0,0,0"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 콤보 단계 목록 -->
                                    <DataGrid Grid.Row="1" 
                                             Name="ComboStepsDataGrid"
                                             Height="200"
                                             AutoGenerateColumns="False"
                                             CanUserAddRows="True"
                                             CanUserDeleteRows="True"
                                             GridLinesVisibility="All"
                                             HeadersVisibility="Column"
                                             FontSize="12">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="순서" 
                                                               Width="60" 
                                                               IsReadOnly="True"
                                                               Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"/>
                                            <DataGridTextColumn Header="키 시퀀스" 
                                                               Width="200" 
                                                               Binding="{Binding KeySequence}"/>
                                            <DataGridTextColumn Header="딜레이 (ms)" 
                                                               Width="100" 
                                                               Binding="{Binding DelayAfterMs}"/>
                                            <DataGridTextColumn Header="설명" 
                                                               Width="*" 
                                                               Binding="{Binding Description}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    
                                    <!-- 콤보 단계 조작 버튼 -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                        <Button Name="AddComboStepButton"
                                               Content="➕ 단계 추가" 
                                               Margin="0,0,10,0" 
                                               Padding="15,8" 
                                               Background="#28A745" 
                                               Foreground="White" 
                                               BorderThickness="0"
                                               Click="AddComboStepButton_Click"/>
                                        <Button Name="RemoveComboStepButton"
                                               Content="➖ 단계 삭제" 
                                               Margin="0,0,10,0" 
                                               Padding="15,8" 
                                               Background="#DC3545" 
                                               Foreground="White" 
                                               BorderThickness="0"
                                               Click="RemoveComboStepButton_Click"/>
                                        <Button Name="TestComboButton"
                                               Content="🧪 테스트" 
                                               Padding="15,8" 
                                               Background="#17A2B8" 
                                               Foreground="White" 
                                               BorderThickness="0"
                                               Click="TestComboButton_Click"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 연사 설정 패널 -->
                            <StackPanel Name="RapidSettingsPanel" Visibility="Collapsed">
                                <TextBlock Text="🔥 연사 설정 - 속도와 지속시간" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 키 시퀀스 -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="⌨️ 연사할 키:" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBox Name="RapidKeySequenceTextBox" 
                                                Height="35"
                                                FontSize="14"
                                                VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- 연사 속도 -->
                                    <Grid Grid.Row="1" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="300"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="⚡ 연사 속도:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Slider Grid.Column="1" 
                                               Name="RapidCpsSlider"
                                               Minimum="0.1" 
                                               Maximum="50" 
                                               Value="10"
                                               TickFrequency="1"
                                               ValueChanged="RapidCpsSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="2" 
                                                  Name="RapidCpsText"
                                                  Text="10 CPS" 
                                                  VerticalAlignment="Center" 
                                                  Margin="15,0,0,0"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 지속 시간 -->
                                    <Grid Grid.Row="2" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="300"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="⏰ 지속 시간:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Slider Grid.Column="1" 
                                               Name="RapidDurationSlider"
                                               Minimum="0.1" 
                                               Maximum="10" 
                                               Value="1"
                                               TickFrequency="0.1"
                                               ValueChanged="RapidDurationSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="2" 
                                                  Name="RapidDurationText"
                                                  Text="1.0초" 
                                                  VerticalAlignment="Center" 
                                                  Margin="15,0,0,0"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 고정 지속시간 옵션 -->
                                    <CheckBox Grid.Row="3" 
                                             Name="RapidUseFixedDurationCheckBox"
                                             Content="🔒 고정 지속시간 사용 (체크 해제시 다시 명령어를 말할 때까지 계속 연사)" 
                                             IsChecked="True"
                                             Margin="0,0,0,15"/>
                                    
                                    <!-- 테스트 버튼 -->
                                    <Button Grid.Row="4" 
                                           Name="TestRapidButton"
                                           Content="🧪 연사 테스트" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Padding="20,10" 
                                           Background="#17A2B8" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="TestRapidButton_Click"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 홀드 설정 패널 -->
                            <StackPanel Name="HoldSettingsPanel" Visibility="Collapsed">
                                <TextBlock Text="🔒 홀드 설정 - 지속시간과 해제조건" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 키 시퀀스 -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="⌨️ 홀드할 키:" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBox Name="HoldKeySequenceTextBox" 
                                                Height="35"
                                                FontSize="14"
                                                VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- 홀드 지속시간 -->
                                    <Grid Grid.Row="1" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="300"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="⏰ 홀드 시간:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Slider Grid.Column="1" 
                                               Name="HoldDurationSlider"
                                               Minimum="0.1" 
                                               Maximum="30" 
                                               Value="1"
                                               TickFrequency="0.5"
                                               ValueChanged="HoldDurationSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="2" 
                                                  Name="HoldDurationText"
                                                  Text="1.0초" 
                                                  VerticalAlignment="Center" 
                                                  Margin="15,0,0,0"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 고정 지속시간 옵션 -->
                                    <CheckBox Grid.Row="2" 
                                             Name="HoldUseFixedDurationCheckBox"
                                             Content="🔒 고정 지속시간 사용" 
                                             IsChecked="True"
                                             Margin="0,0,0,15"
                                             Checked="HoldUseFixedDurationCheckBox_Checked"
                                             Unchecked="HoldUseFixedDurationCheckBox_Unchecked"/>
                                    
                                    <!-- 해제 명령어 -->
                                    <StackPanel Grid.Row="3" Name="HoldReleaseCommandPanel" Margin="0,0,0,15" IsEnabled="False">
                                        <TextBlock Text="🗣️ 해제 명령어:" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBox Name="HoldReleaseCommandTextBox" 
                                                Height="35"
                                                FontSize="14"
                                                VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- 테스트 버튼 -->
                                    <Button Grid.Row="4" 
                                           Name="TestHoldButton"
                                           Content="🧪 홀드 테스트" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Padding="20,10" 
                                           Background="#17A2B8" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="TestHoldButton_Click"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 토글 설정 패널 -->
                            <StackPanel Name="ToggleSettingsPanel" Visibility="Collapsed">
                                <TextBlock Text="🔄 토글 설정 - 상태표시와 해제명령" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 키 시퀀스 -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="⌨️ 토글할 키:" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBox Name="ToggleKeySequenceTextBox" 
                                                Height="35"
                                                FontSize="14"
                                                VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- 토글 해제 명령어 -->
                                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                        <TextBlock Text="🗣️ 해제 명령어 (선택사항):" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBox Name="ToggleOffCommandTextBox" 
                                                Height="35"
                                                FontSize="14"
                                                VerticalContentAlignment="Center"/>
                                        <TextBlock Text="💡 비워두면 동일한 명령어로 ON/OFF 전환됩니다" 
                                                  FontSize="11" 
                                                  Foreground="#6C757D" 
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- 상태 표시기 옵션 -->
                                    <CheckBox Grid.Row="2" 
                                             Name="ToggleShowStatusCheckBox"
                                             Content="📊 상태 표시기 사용 (UI에 ON/OFF 상태 표시)" 
                                             IsChecked="True"
                                             Margin="0,0,0,15"/>
                                    
                                    <!-- 현재 토글 상태 -->
                                    <Grid Grid.Row="3" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="🚦 현재 상태:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Ellipse Grid.Column="1" 
                                                Name="ToggleStatusIndicator"
                                                Width="20" 
                                                Height="20" 
                                                Fill="#DC3545"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="2" 
                                                  Name="ToggleStatusText"
                                                  Text="OFF" 
                                                  VerticalAlignment="Center"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 테스트 버튼 -->
                                    <Button Grid.Row="4" 
                                           Name="TestToggleButton"
                                           Content="🧪 토글 테스트" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Padding="20,10" 
                                           Background="#17A2B8" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="TestToggleButton_Click"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 반복 설정 패널 -->
                            <StackPanel Name="RepeatSettingsPanel" Visibility="Collapsed">
                                <TextBlock Text="🔁 반복 설정 - 횟수와 간격" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 키 시퀀스 -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="⌨️ 반복할 키:" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBox Name="RepeatKeySequenceTextBox" 
                                                Height="35"
                                                FontSize="14"
                                                VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- 반복 횟수 -->
                                    <Grid Grid.Row="1" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="🔢 반복 횟수:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Slider Grid.Column="1" 
                                               Name="RepeatCountSlider"
                                               Minimum="1" 
                                               Maximum="100" 
                                               Value="3"
                                               TickFrequency="1"
                                               ValueChanged="RepeatCountSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="2" 
                                                  Name="RepeatCountText"
                                                  Text="3회" 
                                                  VerticalAlignment="Center" 
                                                  Margin="15,0,0,0"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 반복 간격 -->
                                    <Grid Grid.Row="2" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="⏰ 반복 간격:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Slider Grid.Column="1" 
                                               Name="RepeatIntervalSlider"
                                               Minimum="0.1" 
                                               Maximum="5" 
                                               Value="0.5"
                                               TickFrequency="0.1"
                                               ValueChanged="RepeatIntervalSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="2" 
                                                  Name="RepeatIntervalText"
                                                  Text="0.5초" 
                                                  VerticalAlignment="Center" 
                                                  Margin="15,0,0,0"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 다음 명령 시 중단 옵션 -->
                                    <CheckBox Grid.Row="3" 
                                             Name="RepeatStopOnNextCommandCheckBox"
                                             Content="⏹️ 다음 음성 명령 시 반복 중단" 
                                             IsChecked="False"
                                             Margin="0,0,0,15"/>
                                    
                                    <!-- 테스트 버튼 -->
                                    <Button Grid.Row="4" 
                                           Name="TestRepeatButton"
                                           Content="🧪 반복 테스트" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Padding="20,10" 
                                           Background="#17A2B8" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="TestRepeatButton_Click"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 매크로 저장/취소 버튼 -->
